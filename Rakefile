begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "bowline-update"
    gemspec.summary = "Bowline Update Manager"
    gemspec.email = "info@eribium.org"
    gemspec.homepage = "http://github.com/maccman/bowline-version"
    gemspec.description = "Update manager for Bowline Apps"
    gemspec.authors = ["Alex MacCaw"]
    gemspec.add_dependency("versionomy", ">=0.3.0")
    gemspec.add_dependency("bowline")
    gemspec.add_dependency("restclient")
    gemspec.add_dependency("rubyzip2", ">= 2.0.1")
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install jeweler"
end